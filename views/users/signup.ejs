<% layout("/layouts/boilerplate")%>


    <div class="row mt-3  ">
        <h1 class="col-6 offset-3 ">Signup on wanderlust </h1>
        <div class="col-8 offset-2  shadow p-3 mb-5 bg-light rounded">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label" >username</label>
                    <input name="username" type="text" placeholder="enter username" id="username" class="form-control" required>
                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback">  username incorrect</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label" >email</label>
                    <input name="email" type="email" placeholder=" email" id="email" class="form-control" required>
                    
                    <div class="invalid-feedback">check email</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label" >Password</label>
                    <input name="password" type="password" placeholder=" password" id="password" class="form-control" required>
                    <div class="invalid-feedback">password empty</div>
                </div>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>