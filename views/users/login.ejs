<% layout("/layouts/boilerplate")%>



<div class="row mt-3  ">
    <h1 class="col-6 offset-3 ">Login </h1>
    <div class="col-8 offset-2  shadow p-3 mb-5 bg-light rounded">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >username</label>
                <input name="username" type="text" placeholder="enter username" id="username" class="form-control" required>
     </div>
            <div class="mb-3">
                <label for="password" class="form-label" >Password</label>
                <input name="password" type="password" placeholder=" password" id="password" class="form-control" required>
                
            </div>
            <button class="btn btn-success ">login</button>
        </form>
    </div>
</div>