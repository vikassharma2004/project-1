<% layout("/layouts/boilerplate")%>
    <style>
        #filters {
            margin-top: 1rem;
            display: flex;
            white-space: nowrap;
            overflow-x: auto;
            overflow-y: hidden;
            align-items: center;

        }

        .filter {
            margin-right: 2rem;
            text-align: center;
            opacity: 0.7;
            height: 50px;
            width: 100px;
            display: inline-block;

        }

        .filter:hover {
            opacity: 1;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax_info {
            display: none;
        }

        .tax_toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
        }
    </style>

    <body>

        <div id="filters">
            <div class="filter">
                <div class=""> <i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>

            <div class="filter">
                <div class=""> <i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountain</p>
            </div>

            <div class="filter">
                <div class=""> <i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castle</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div class=""> <i class="fa-solid fa-ship"></i></div>
                <p>Botes</p>
            </div>
            <div class="tax_toggle">
                <div class="form-check form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2  row-cols-sm-1 row-cols-xsm-1 mt-3">
            <%for(let listing of AllListing){%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card" style="width: 21rem;">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="listings" style="height: 20rem;"
                            loading="lazy">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">

                                <b>
                                    <%= listing.title%>
                                </b>
                                <br>
                                &#8377; <%=listing.price.toLocaleString("en-IN") %> / Night <i class="tax_info">&nbsp;
                                        &nbsp;+ 18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>


        <script>
            let taxswitch = document.getElementById("flexSwitchCheckDefault")
            taxswitch.addEventListener("click", () => {
                let tax = document.getElementsByClassName("tax_info")
                for (tax of tax) {
                    if (tax.style.display != "inline") {

                        tax.style.display = "inline";
                    } else {
                        tax.style.display = "none"
                    }
                }
            })
        </script>


    </body>